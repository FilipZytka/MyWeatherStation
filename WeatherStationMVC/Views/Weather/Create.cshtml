@model WeatherData
@{
    ViewData["Title"] = "Create";
}


<div id="home">
    <div class="container">
        <div class="row">
            <div class=" col-md-4"></div>
            <label class="control-label mb-4" asp-for="Name"><span class="category-log">Type your town name</span></label>
            <form asp-action="Submit" method="post">
                <div class="form-group mb-3">
                    <input class="form-control" type="text" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Show results" class="btn btn-light" />
                </div>
            </form>
        </div>
    </div>

    </div>



