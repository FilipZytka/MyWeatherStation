@model WeatherData
@{
    ViewData["Title"] = "Results";
    var country_Tag = Model.Sys.Country;
}

<div id="home">

    <div class="wrapper">
        <section class="hidden">
        <div class="mycontainer">
            <i class="fa-solid fa-flag"></i>
            <span class="num"><img src="https://flagsapi.com/@country_Tag/flat/64.png"></span>
            <span class="text">@Model.Name</span>
        </div>
        </section>
        <section class="hidden">
            <div class="mycontainer">
                <i class="fa-solid fa-temperature-three-quarters"></i>
                <span class="num">@Model?.Main?.Temp Â°C</span>
                <span class="text">Temperature</span>
            </div>
        </section>
        <section class="hidden">
            <div class="mycontainer">
                <i class="fa-solid fa-water"></i>
                <span class="num">@Model?.Main?.Humidity %</span>
                <span class="text">Humidity</span>

            </div>
        </section>
        <section class="hidden">
            <div class="mycontainer">

                <i class="fa-solid fa-smog"></i>
                <span class="num">@Model?.Main?.Pressure hPA </span>
                <span class="text">Pressure</span>

            </div>
        </section>
        <section class="hidden">
            <div class="mycontainer">

                <i class="fa-solid fa-wind"></i> 
                    <span class="num">@Model?.Wind.Speed m/s</span>
                <span class="text">Wind</span>
            </div>
        </section>
        <section class="hidden">
            <div class="mycontainer">

                <i class="fa-solid fa-cloud"></i>
                <span class="num">@Model?.Clouds?.All % </span>
                <span class="text">Clouds</span>

            </div>
        </section>
    </div>

    <div class="container-button d-flex justify-content-center flex-wrap">
        <a href="@Url.Action("Create", "Weather")" class="btn btn-light me-1 border-2 border border-light fw-bold text-secondary mb-2">Search again</a>
        <a href="@Url.Action("PrintLogsForActiveUser", "Weather")" class="btn btn-light me-1 border-2 border border-light fw-bold text-secondary mb-2">History</a>
    </div>


     
    
</div>


