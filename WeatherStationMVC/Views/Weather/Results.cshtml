@model WeatherData
@{
    ViewData["Title"] = "Results";
}

<div class="row">
    <div class=" col-md-4"></div>
    <p><strong>City:</strong> @Model?.Name, @Model?.Sys.Country</p>
    <p><strong>Temperature:</strong> @Model?.Main?.TempÂ°C</p>
    <p><strong>Humidity:</strong> @Model?.Main?.Humidity%</p>
    <p><strong>Pressure:</strong> @Model?.Main?.Pressure Pa</p>
    <p><strong>Main:</strong> @Model?.Weather?[0].Main </p>
    <p><strong>Clouds:</strong> @Model?.Clouds?.All </p>
    <p><strong>Wind Speed:</strong> @Model?.Wind?.Speed </p>
    <p><strong>Wind Deg:</strong> @Model?.Wind?.Deg </p>
    <p><strong>Wind Gust:</strong> @Model?.Wind?.Gust </p>

    <div class="mt-3">
        <a href="@Url.Action("PrintLogsForActiveUser", "Weather")" class="btn btn-primary">Show all logs for current user!</a>
    </div>
    <div class="mt-3">
        <a href="@Url.Action("Create", "Weather")" class="btn btn-primary">Search for weather info again</a>
    </div>






</div>
