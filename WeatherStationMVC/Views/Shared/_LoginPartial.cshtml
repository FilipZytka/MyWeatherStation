@using Microsoft.AspNetCore.Identity
@using WeatherStation.Entity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


    @if (SignInManager.IsSignedIn(User))
    {
    <ul class="navbar-nav me-auto">
        <li class="nav-item">
            <a class="nav-link  text-decoration-none"  asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link  text-decoration-none" asp-area="" asp-controller="Weather" asp-action="Create">Weather</a>
        </li>
        <li class="nav-item">
            <a class="nav-link  text-decoration-none" asp-area="" asp-controller="Weather" asp-action="PrintLogsForActiveUser">History</a>
        </li>
        </ul>
    <ul class="navbar-nav ms-auto">

        <li class="nav-item">
            <form class="d-flex" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button class="btn btn-outline-info me-2" type="submit">Log out</button>
            </form>
        </li>

    </ul>
    }


    

